# Finale Cache Service Environment Variables

# Vercel KV Configuration (automatically provided by Vercel)
KV_URL=redis://localhost:6379  # Development fallback
KV_REST_API_URL=https://your-kv-instance.kv.vercel-storage.com
KV_REST_API_TOKEN=your-token
KV_REST_API_READ_ONLY_TOKEN=your-readonly-token

# Finale API Configuration
FINALE_API_KEY=your-finale-api-key
FINALE_API_SECRET=your-finale-api-secret
FINALE_ACCOUNT_PATH=your-account-path

# Optional: Default report URL (can also be set in settings)
FINALE_REPORT_URL=https://finale-instance.com/reports/inventory-detail

# Cache Configuration (optional)
CACHE_DEFAULT_TTL_MINUTES=15
CACHE_MAX_SIZE_MB=50

# Development Mode (optional)
DEBUG_CACHE_SERVICE=true
NODE_ENV=development
